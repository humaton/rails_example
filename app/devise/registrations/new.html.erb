<div class="container">
	<div class="row">

	<h2>Sign up</h2>
	
	<%= devise_error_messages! %>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

		<fieldset>
	
			<div class="clearfix">
				<%= f.label :email %>
				<div class="input">
					<%= f.email_field :email %>
				</div>
			</div>
	
			<div class="clearfix">
				<%= f.label :password %>
				<div class="input">
					<%= f.password_field :password %>
				</div>
			</div>
	
			<div class="clearfix">
				<%= f.label :confirm, :for => "user_password_confirmation" %>
				<div class="input">
					<%= f.password_field :password_confirmation %>
				</div>
			</div>
	
			<div class="clearfix">
				<div class="input">
					<%= f.submit "Sign up", :class => "btn large primary" %>
				</div>
			</div>
	
			<% end %>
	
		</fieldset>

	</div>
</div>